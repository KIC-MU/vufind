<?php
  $sources = [];
  foreach ($this->driver->getSources() as $source):
    $title = '<a href="/Record/' . $source['id'] . '">' . $this->escapeHtml($source['title']) . "</a>";
    $details = [$title];
    foreach ($source['details'] as $detail):
      $details[] = $this->escapeHtml($detail);
    endforeach;
    $sources[] = implode("<br />", $details);
  endforeach;
?>
<?=implode("<br /><br />", $sources)?>
